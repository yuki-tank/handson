@page
@model TFApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <h2>DBに保存</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="User.Name" class="control-label">名前を入力</label>
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="User.City" class="control-label">都市名を入力　(例)Tokyo, Osakaなどローマ字で入力</label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
        <div class="mb-4">
            <a asp-page="./Index">TOPにもどる</a>
        </div>
    </div>
</div>